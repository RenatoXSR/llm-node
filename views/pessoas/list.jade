// GET /pessoas/ (lista)
extends ../base.jade
block content
	h3 Pessoas
	.form-group.row
		.col-sm-2
			a(href="novo", class='btn btn-success btn-sm')
				i.glyphicon.glyphicon-plus
				span &nbsp;Nova pessoa
	.table-responsive
		table.table.table-striped.table-condensed
			thead
				tr
					th fullName
					th Natureza
					th Parte Cliente?
					th Parte Contr√°ria?
			tbody
				each pessoa in pessoas
						tr
							td
								a(href="/pessoas/#{pessoa.id}") #{pessoa.fullName}
							td= pessoa.natPessoa
							td
								if(pessoa.eParteClienteLegado=='S')
									span.fa.fa-check-square-o
								else
									span.fa.fa-square-o
							td
								if(pessoa.eParteContrariaLegado=='S')
									span.fa.fa-check-square-o
								else
									span.fa.fa-square-o
	if !pessoas.length
		p Nenhuma pessoa encontrado.
	if nextPageToken
		nav
			ul.pager
				li
